{
  "name": "product_title",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "title",
      "name": "t:components.product_title.blocks.title.name",
      "limit": 1,
      "elements": [
        {
          "type": "text",
          "id": "title_text",
          "default": "Product Title",
          "label": "t:components.product_title.blocks.title.elements.title_text.label"
        },
        {
          "type": "select",
          "id": "title_size",
          "options": [
            {
              "value": "h2",
              "label": "t:components.product_title.blocks.title.elements.title_size.options__1.label"
            },
            {
              "value": "h1",
              "label": "t:components.product_title.blocks.title.elements.title_size.options__2.label"
            },
            {
              "value": "h0",
              "label": "t:components.product_title.blocks.title.elements.title_size.options__3.label"
            }
          ],
          "default": "h1",
          "label": "t:components.product_title.blocks.title.elements.title_size.label"
        }
      ]
    },
    {
      "type": "sub_title",
      "name": "t:components.product_title.blocks.sub_title.name",
      "limit": 1,
      "elements": [
        {
          "type": "text",
          "id": "sub_title_text",
          "default": "This is a great product that you will love!",
          "label": "t:components.product_title.blocks.sub_title.elements.sub_title_text.label"
        },
        {
          "type": "range",
          "id": "sub_title_opacity",
          "min": 0,
          "max": 100,
          "unit": "%",
          "label": "t:components.product_title.blocks.sub_title.elements.sub_title_opacity.label",
          "default": 100
        }
      ]
    }
  ],
  "elements": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "t:components.product_title.elements.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "t:components.product_title.elements.padding_bottom.label",
      "default": 36
    }
  ]
}
